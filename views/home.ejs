<!DOCTYPE html>
<html>
<head>
	<title>User Management System</title>
</head>
<style>
	/* Reset default margin and padding for all elements */
* {
  margin: 0;
  padding: 0;
}

/* Style the body */
body {
  font-family: Arial, sans-serif;
  background-color: #f5f5f5;
  margin: 20px;
}

/* Style the main heading */
h2 {
	background-color: #333;
  color: #fff;
  padding: 10px;
  text-align: center;
}

/* Style the tables */
table {
  width: 100%;
  margin-bottom: 20px;
  border-collapse: collapse;
  background-color: #fff;
  box-shadow: 0px 0px 5px rgba(0, 0, 0, 0.2);
}

th, td {
  padding: 10px;
  text-align: left;
}

th {
	background-color: #333;
  color: #fff;
}

/* Style the form inputs and buttons */
form {
  margin: 20px;
  padding: 20px;
  background-color: #fff;
  box-shadow: 0px 0px 5px rgba(0, 0, 0, 0.2);
}

input[type="text"],
input[type="number"],
select {
  width: 100%;
  padding: 10px;
  margin-bottom: 10px;
  border: 1px solid #ccc;
  border-radius: 5px;
}

select {
  background-color: #fff;
}

a,button[type="submit"] {
  background-color: #333;;
  color: #fff;
  padding: 10px 20px;
  border: none;
  border-radius: 5px;
  cursor: pointer;
  transition: background-color 0.3s;
}

a,#btn1{
  background-color: #333;;
  color: #fff;
  padding: 5px 10px;
  border: none;
  border-radius: 5px;
  cursor: pointer;
  transition: background-color 0.3s;
}
a, button[type="submit"]:hover {
  background-color: #555;
}

/* Style the aside for adding and updating employees */
.modify {
  background-color: #f5f5f5;
  margin: 20px;
  padding: 20px;
  box-shadow: 0px 0px 5px rgba(0, 0, 0, 0.2);
}

/* Style the delete table */
.delete-table {
  width: 100%;
  margin: 20px;
  background-color: #fff;
  box-shadow: 0px 0px 5px rgba(0, 0, 0, 0.2);
}

/* Style the delete buttons */
a,.delete-table button[type="submit"] {
	background-color: #333;
}

a,.delete-table button[type="submit"]:hover {
	background-color: #333;
}
</style>
<body>	
<h2>Employee Management System</h2>
  <table>
	  <tr>
		  <th>User Id</th>
		  <th>User Name</th>
		  <th>Designation</th>
		  <th>User Email</th>
		  <th>Age</th>
		  <th>Contact Number</th>
		  <th>Blood Group</th>
		  <th>Rate Type</th>
		  <th>Hour Rate/Salary</th>
		  <th>Address</th>
		  <th>Action</th>
	  </tr>
	  <% data.forEach(element=> { %>
		  <tr>
			<td><%= element.userUniqueId %></td>
			<td><%= element.userName %></td>
			<td><%= element.designation %></td>
			<td><%= element.userEmail %></td>
			<td><%= element.userAge %></td>
			<td><%= element.number %></td>
			<td><%= element.bloodgrp %></td>
			<td><%= element.ratetype %></td>
			<td><%= element.salary %></td>
			<td><%= element.address %></td>
			<td>
				<a href="#add"><button id="btn1">Add</button></a>
				<a href="#update"><button id="btn1">Update</button></a>
				<%= element.button %>
			</td>
		  </tr>
	  <% }) %>
  </table>
	<aside class="modify">
		<section id="add">
	<h2>Add Employee</h2>
	<form action="/" method="post" style =" padding-right: 40px;">
		<input type="text" placeholder="User Unique Id" name="userUniqueId">
		<input type="text" placeholder="User Name" name="userName">
		<input type="text" placeholder="Designation" name="designation">
		<input type="text" placeholder="User Email"name="userEmail">
		<input type="text" placeholder="User Age"name="userAge">
		<input type="number" placeholder="Contact Number" name="number">
		<input type="text" placeholder="Blood Group" name="bloodgrp">
		<select name="ratetype" id="rt" placeholder="-Select-">
			<option>-Select Rate Type-</option>  
			<option value="hourly">Hourly</option>
			<option value="monthly">Monthly</option>
		</select>
		<input type="number" placeholder="Hour Rate/Salary" name="salary">
		<input type="text" name="address" placeholder='Address'>
		<button id="btn" type="submit" name='button'>Submit</button>
	</form>
</section>
<section id="update">
 <h2>Update Employee</h2>
 <form action="update" method="post" style=" padding-right: 40px;">
	<input type="text" placeholder="User Unique Id"name="userUniqueId">
	<input type="text" placeholder="User Name" name="userName">
	<input type="text" placeholder="Designation" name="designation">
	<input type="text" placeholder="User Email" name="userEmail">
	<input type="text" placeholder="User Age"name="userAge">
	<input type="number" placeholder="Contact Number" name="number">
	<input type="text" placeholder="Blood Group" name="bloodgrp">
	<select name="ratetype" id="rt" placeholder="-Select-">
		<option>-Select Rate Type-</option>  
		<option value="hourly">Hourly</option>
		<option value="monthly">Monthly</option>
	</select>
	<input type="number" placeholder="Hour Rate/Salary" name="salary">
	<input type="text" name="address" placeholder='Address'>
	<button id="btn" type="submit" name='button'>Update</button>
</form>
</section>
</aside>
	<h2>Delete Employee</h2>
    <table>
		<tr>
		  <th>User Id</th>
		  <th>User Name</th>
		  <th>Designation</th>
		  <th>User Email</th>
		  <th>Age</th>
		  <th>Contact Number</th>
		  <th>Blood Group</th>
		  <th>Rate Type</th>
		  <th>Hour Rate/Salary</th>
		  <th>Address</th>
		  <th>Delete</th>
		</tr>
		<% data.forEach(element => { %>
		<tr>
		  <td><%= element.userUniqueId %></td>
		  <td><%= element.userName %></td>
		  <td><%= element.designation %></td>
		  <td><%= element.userEmail %></td>
		  <td><%= element.userAge %></td>
		  <td><%= element.number %></td>
		  <td><%= element.bloodgrp %></td>
		  <td><%= element.ratetype %></td>
		  <td><%= element.salary %></td>
		  <td><%= element.address %></td>
		  <td>
				<form action="/delete" method="post" style ="padding: 0; margin: 0; width: 78px;">
				  <input type="text" style="display: none;" 
					 name="userUniqueId" 
					 value="<%= element.userUniqueId %>">
				  <button type="submit">Delete</button>
				</form>
		  </td>
		</tr>
		<% }) %>
	</table>
</body>
</html>
